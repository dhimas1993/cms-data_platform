<!-- Large modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Admin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/link?_method=PUT" method="POST">
          <div class="modal-body">
              <div class="form-group">
                  <label for="name">Name</label>
                  <input class="form-control name" name="name" type="text" placeholder="Input Name">
              </div>
              <div class="form-group">
                  <label for="link">Link</label>
                  <textarea required name="link" type="text" class="form-control link" id="exampleFormControlTextarea1" rows="8" placeholder="Embed Link"></textarea>
              </div>
              <div class="form-group">
                  <label for="subscribe">Subscribe Type</label>
                  <select id="subscribe" class="form-control subscribe" name="subscribe">
                    <option value="" disabled selected>Select your option</option>
                    <% for(let i = 0; i < subscribe.length; i++ ) {%>
                      <option value="<%= subscribe[i].id %>"><%= subscribe[i].name %></option>
                    <% } %>
                  </select>
                  <span>Kosongkan jika tidak ada perubahan</span>
                </div>
          </div>
          <div class="modal-footer">
              <input type="hidden" class="id" name="id">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
      </form>
    </div>
  </div>
</div>