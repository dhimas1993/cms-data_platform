<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            Add Embed Link
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Type Subscribe</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Type Subscribe</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% for(let i =0; i < link.length; i++) {%>
                        <tr class="center">
                            <td><%= i + 1%></td>
                            <td><%= link[i].name %></td>
                            <td><%= link[i].link %></td>
                            <td><%= link[i].subscribe.name %></td>
                            <td><%= link[i].date.getDate() + " - " + (Number(link[i].date.getMonth() + 1)) + " - " + link[i].date.getFullYear() %></td>
                            <td>
                                <form action="/admin/link/<%= link[i].id %>?_method=DELETE" method="POST">
                                    <a  
                                        href="javascript:void()"
                                        type="button"
                                        class="btn btn-warning btn-sm btn-circle button-update"
                                        data-id="<%= link[i].id %>"
                                        data-name="<%= link[i].name %>"
                                        data-link="<%= link[i].link %>"
                                    >
                                        <i class="fas fa-fw fa-edit"></i>
                                    </a>
                                    
                                    <!-- Button trigger modal -->
                                    <button 
                                        type="submit" 
                                        href="" 
                                        class=" btn btn-danger btn-sm btn-circle"
                                        type="button"  data-toggle="modal" data-target="#exampleModal">
                                        <i class="fas fa-fw fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>